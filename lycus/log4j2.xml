<?xml version="1.0" encoding="UTF-8"?>
    <Configuration status="WARN">
      <Appenders>
        <Console name="Console" target="SYSTEM_OUT">
          <PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n"/>
        </Console>
    <Syslog name="syslog" facility="local3" host="localhost" port="514" protocol="UDP"/>       
 <RollingFile name="RollingFile" fileName="large-prober.log" filePattern="large-prober-%d{MM-dd-yyyy}.log.gz"
                 ignoreExceptions="false">
      <PatternLayout>
        <Pattern>%d %p %c{1.} [%t] %m%n</Pattern>
      </PatternLayout>
      <TimeBasedTriggeringPolicy />
    </RollingFile>

      </Appenders>
      <Loggers>
        <Root level="debug">
          <AppenderRef ref="RollingFile"/>
        </Root>
      </Loggers>
    </Configuration>
